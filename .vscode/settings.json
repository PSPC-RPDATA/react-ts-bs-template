{
    "python.pythonPath": "/Library/Developer/CommandLineTools/usr/bin/python3",
    "python.formatting.provider": "black",
    "[typescript]": {
        "editor.tabSize": 2,
        "editor.formatOnSave": true
    },
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact",
    ],
    "eslint.workingDirectories": [
        "./src/"
    ],
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true
    },
}